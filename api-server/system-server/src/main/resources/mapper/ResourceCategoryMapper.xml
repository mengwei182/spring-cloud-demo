<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.system.mapper.MenuMapper">
    <select id="getResourceCategoryList" parameterType="org.example.system.api.ResourceCategoryQueryPage"
            resultType="org.example.common.entity.system.ResourceCategory">
        SELECT *
        FROM resource_category
        <where>
            <if test="name != null and name != ''">
                `name` LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>
</mapper>